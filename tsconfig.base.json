{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@argon/shared-shadcn-components-ui": [
        "libs/shared/shadcn-components-ui/src/index.ts"
      ],
      "@argon/shared-shadcn-utils-ui": [
        "libs/shared/shadcn-utils-ui/src/index.ts"
      ],
      "@argon/shared/shadcn-components-ui/*": [
        "libs/shared/shadcn-components-ui/src/*"
      ],
      "@argon/shared/shadcn-utils-ui/*": [
        "libs/shared/shadcn-utils-ui/src/*"
      ],
      "@argon/shell-prisma-shell-utils": [
        "libs/shell/prisma-shell-utils/src/index.ts"
      ],
      "@argon/shell/sidebar-feature": [
        "libs/shell/sidebar-feature/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}