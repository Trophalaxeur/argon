      "@argon/shell-auth-data-access": [
        "libs/shell/auth-data-access/src/index.ts"
      ],
      "@argon/shell-auth-data-access/server": [
        "libs/shell/auth-data-access/src/server.ts"
      ],
      "@argon/shell-auth-feature": ["libs/shell/auth-feature/src/index.ts"],
      "@argon/shell-auth-feature/server": [
        "libs/shell/auth-feature/src/server.ts"
      ],
      "@argon/shell-login-form-feature": [
        "libs/shell/login-form-feature/src/index.ts"
      ],
      "@argon/shell-login-form-feature/server": [
        "libs/shell/login-form-feature/src/server.ts"
      ],
